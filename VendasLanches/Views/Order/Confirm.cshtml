@model Order

<div class="container">
    
    <div class="jumbotron">
        <h2>@ViewBag.Message</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Client</strong></p>
            <p>Data Pedido: <strong>@Model.ShippingDate</strong></p>
            <p>Número Pedido: <strong>@Model.Id</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th>Preço</th>
                </tr>
                @if (Model.OrderItems != null)
                {
                    @foreach (var item in Model.OrderItems)
                    {
                        <tr>
                            <td><img src="~/images/snacks/@item.Snack.Image" width="40" height="40" /></td>
                            <td>@item.Quantity</td>
                            <td>@item.SnackName</td>
                            <td>@item.Price.ToString("C2")</td>
                        </tr>
                    }
                }
            </table>

            <h4>Total do Pedido: <strong>@(((double)ViewBag.Amount).ToString("C2"))</strong></h4>

        </div>
    </div>
</div>

<div class="form-group" style="text-align:center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Home</a>
    </h3>
</div>
