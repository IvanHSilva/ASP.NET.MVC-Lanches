@model VendasLanches.Models.Category

@{
    ViewData["Title"] = "Dados Categoria";
}

<h1>Dados Categoria</h1>

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nome</dt>
        <dd class = "col-sm-10">@Model.Name</dd>
        <dt class = "col-sm-2">Descrição</dt>
        <dd class = "col-sm-10">@Model.Description </dd>
        <dt class = "col-sm-2">Data Cadastro</dt>
        <dd class = "col-sm-10">@Model.RegDate.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Alterar</a> |
    <a asp-action="Index">Voltar</a>
</div>
