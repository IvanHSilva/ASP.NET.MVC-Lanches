@model VendasLanches.Models.Order

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>
<h3>Deseja mesmo apagar este pedido?</h3>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cliente:</dt>
        <dd class="col-sm-10">@Model.Client</dd>
        <dt class="col-sm-2">Telefone:</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">E-Mail:</dt>
        <dd class="col-sm-10">@Model.EMail</dd>
        <dt class="col-sm-2">Total:</dt>
        <dd class="col-sm-10">@Model.TotalOrder.ToString("N")</dd>
        <dt class="col-sm-2">Items:</dt>
        <dd class="col-sm-10">@Model.Items</dd>
        <dt class="col-sm-2">Data Cad:</dt>
        <dd class="col-sm-10">@Model.RegDate.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Data Compra:</dt>
        <dd class="col-sm-10">@Model.ShippingDate.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Entrega:</dt>
        <dd class="col-sm-10">@Model.DeliveryDate.ToString("dd/MM/yyyy")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
