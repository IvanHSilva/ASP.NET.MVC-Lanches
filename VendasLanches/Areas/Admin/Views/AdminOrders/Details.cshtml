@model VendasLanches.ViewModels.OrderSnackViewModel

@{
    ViewData["Title"] = "Dados";
}

<h4>Pedido</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Número:</dt>
        <dd class="col-sm-3">@Model.Order.Id.ToString("00000")</dd>
        <dt class="col-sm-2">Cliente:</dt>
        <dd class = "col-sm-5">@Model.Order.Client</dd>
        <dt class = "col-sm-2">Telefone:</dt>
        <dd class = "col-sm-3">@Model.Order.Phone</dd>
        <dt class = "col-sm-2">E-Mail:</dt>
        <dd class = "col-sm-5">@Model.Order.EMail</dd>
@*         <dt class = "col-sm-2">Total:</dt>
        <dd class="col-sm-3">@Model.Order.TotalOrder.ToString("N")</dd>
        <dt class = "col-sm-2">Items:</dt>
        <dd class="col-sm-5">@Model.Order.Items</dd>
 *@@*         <dt class = "col-sm-2">Data Cad:</dt>
        <dd class="col-sm-10">@Model.Order.RegDate.ToString("dd/MM/yyyy")</dd>
 *@        <dt class = "col-sm-2">Data Compra:</dt>
        <dd class="col-sm-3">@Model.Order.ShippingDate.ToString("dd/MM/yyyy")</dd>
        <dt class = "col-sm-2">Entrega:</dt>
        <dd class="col-sm-5">@Model.Order.DeliveryDate.ToString("dd/MM/yyyy")</dd>
    </dl>
    <hr />

    <h4>Itens do Pedido</h4>

    <table class="table">
        @foreach (var item in Model.Order.OrderItems!) {
            //totalOrder += (item.Snack.Price * item.Quantity);

            <tr>
                <td align="left">
                    <h6>@Html.DisplayFor(modelItem => item.Snack.Name)</h6>
                </td>
                <td align="left">
                    <img src="~/images/snacks/@item.Snack.Image" class="img-fluid"
                         height="100" width="100" />
                </td>
                <td align="right">
                    <h6>Quant: @Html.DisplayFor(modelItem => item.Quantity)</h6>
                </td>
                <td align="right">
                    <h6>@string.Format("{0:C}", item.Snack.Price)</h6>
                </td>
            </tr>
        }

        <tr>
            <td colspan="3">&nbsp;</td>
            <td align="right">
                <h5>Total do Pedido: @Model.Order.TotalOrder.ToString("C")</h5>
            </td>
        </tr>
    </table>

    <a asp-action="Index" class="btn btn-outline-info">Voltar</a>
</div>

