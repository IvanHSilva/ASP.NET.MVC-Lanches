<table border="0" width="100%">
    <tr>
        <td>
            <form method="post" enctype="multipart/form-data"
                  asp-controller="AdminImages" asp-action="UploadImages">
        
                <img src="~/images/icons/upload.png" width="100" height="100" />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Selecione as imagens para envio:</b></p>
                        <input type="file" name="files" multiple
                               class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
            <form method="post" enctype="multipart/form-data"
                  asp-controller="AdminImages" asp-action="UploadImages">
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Imagens"
                               class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        @* <td width="100"></td> *@

        <td>
            <form method="post" enctype="multipart/form-data"
                  asp-controller="AdminImages" asp-action="GetImages">

                <img src="~/images/icons/visualize.png" width="100" height="100" />

                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>Visualizar as imagens no Servidor:</strong></p>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar Imagens"
                               class="button btn-outline-warning" />
                    </div>
                </div>

            </form>
        </td>
    </tr>

</table>

<div class="container">
    @if (ViewData["Deleted"] != null) {
        <li>@ViewData["Deleted"]</li>
    }
</div>
